@model IEnumerable<EAP.ViewModel.EmployeeViewModel>
@using EAP.ViewModel

@{
    ViewData["Title"] = "GetEmployeeList";
}

@if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
{
    <div id="errorMessage" class="alert alert-danger fade-out text-center">
        <div class="row">
            <div class="col">
                @ViewData["ErrorMessage"]
            </div>
        </div>
    </div>
    ViewData["ErrorMessage"] = string.Empty;
}

<link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
<div id="employeeListView" class="container d-flex justify-content-center align-items-center">
    <div class="card">
        <div class="card-header">
            <h4>Employee List</h4>
        </div>
        <div class="card-body">
            <div class="container mt-4">
                <div class="row">
                    <div class="col-md">
                        <div class="table-responsive">
                            <div class="dropdown">
                                <div class="row justify-content-between">
                                    <div class="col">
                                        <button class="btn btn-secondary dropdown-toggle" type="button" id="columnDropdown" aria-haspopup="true" aria-expanded="false">
                                            Show/Hide Columns
                                        </button>
                                        <button class="btn btn-light ml-4" type="button" id="createemployee" style="margin-left: 20px;" onclick="location.href='@Url.Action("AddEmployee", "Admin")'">
                                            Add New
                                        </button>

                                    </div>
                                    <div class="col-auto">
                                        <div class="btn-group">
                                            <button type="button" id="showChartBtn" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                Show Chart
                                            </button>
                                            <div class="dropdown-menu" id="chartDropdownMenu">
                                                <!-- Dropdown items will be inserted here -->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="dropdown-menu" aria-labelledby="columnDropdown" id="columnDropdownMenu">
                                    <!-- Dropdown items will be generated dynamically via JavaScript -->
                                </div>
                            </div>
                            <table id="employeeTable" class="table table-striped table-bordered" cellspacing="0" style="width: 100%;">
                                <thead>
                                    <tr>
                                        <th>@Html.DisplayNameFor(x => x.EmpId)</th>
                                        <th>@Html.DisplayNameFor(x => x.FirstName)</th>
                                        <th>@Html.DisplayNameFor(x => x.LastName)</th>
                                        <th>@Html.DisplayNameFor(x => x.Email)</th>
                                        <th>@Html.DisplayNameFor(x => x.Gender)</th>
                                        <th>@Html.Display("Role")</th>
                                        <th class="no-export">@Html.Display("Action")</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="text-center">
                <!-- No buttons or anchor tags -->
            </div>
        </div>
    </div>
</div>

<div id="editEmployeeView" class="container d-none">
    <!-- The edit view content will be rendered here -->
</div>

@Html.Partial("~/Views/Shared/Modal.cshtml")

@section scripts {
    <script src="~/lib/highcharts/highcharts.min.js"></script>
    <script src="~/lib/highcharts/modules/exporting.min.js"></script>
    <script src="~/lib/highcharts/modules/accessibility.min.js"></script>
    <script src="~/js/datatable.js"></script>
    <script src="~/datatable/js/buttons.html5.js"></script>
    <script src="~/datatable/js/buttons.html5.min.js"></script>
    <script src="~/datatable/js/pdfmake.min.js"></script>
    <script src="~/datatable/js/vfs_fonts.min.js"></script>
    <script src="~/datatable/js/jszip.min.js"></script>
    <script src="~/js/admin.js"></script>
    <script src="~/js/site.js"></script>
}

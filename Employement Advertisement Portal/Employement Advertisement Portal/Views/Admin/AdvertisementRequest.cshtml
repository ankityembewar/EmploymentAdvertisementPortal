@model IEnumerable<EAP.ViewModel.AdvertisementViewModel>

@{
    ViewData["Title"] = "AdvertisementRequest";
}

@if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
{
    <div id="errorMessage" class="alert alert-danger fade-out text-center">
        <div class="row">
            <div class="col">
                @ViewData["ErrorMessage"]
            </div>
        </div>
    </div>
    ViewData["ErrorMessage"] = string.Empty;
}

<link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />

<div id="advertisementReqListView" class="container">
    <div class="row">
        <div class="col-md">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Manage Advertisement</h4>
                    <div class="dropdown">
                        <button class="btn btn-secondary" type="button" id="showChartBtn">
                            Show Chart
                        </button>
                        <div id="chartDropdown" class="dropdown-menu" style="display:none;">
                            <a class="dropdown-item" href="#" data-value="pie">Pie Chart</a>
                            <a class="dropdown-item" href="#" data-value="column">Column Chart</a>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table id="advertisementReqTable" class="table table-striped table-bordered" cellspacing="0" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                                    <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
                                    <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                                    <th>@Html.DisplayNameFor(model => model.Location)</th>
                                    <th>Category</th>
                                    <th class="no-export">
                                        @Html.DisplayNameFor(model => model.MediaPath)
                                    </th>
                                    <th class="no-export">@Html.Display("Decision Status")</th>
                                    <th class="no-export">@Html.Display("Action")</th>
                                </tr>
                            </thead>
                            <!-- Table body -->
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="text-center">
                        <!-- No buttons or anchor tags -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="editAdvertisement" class="container d-none">
    <!-- The edit view content will be rendered here -->
</div>
@Html.Partial("~/Views/Shared/Modal.cshtml")

@section scripts {
    <script src="~/lib/highcharts/highcharts.min.js"></script>
    <script src="~/lib/highcharts/modules/exporting.min.js"></script>
    <script src="~/lib/highcharts/modules/accessibility.min.js"></script>
    <script src="~/datatable/js/buttons.html5.js"></script>
    <script src="~/datatable/js/buttons.html5.min.js"></script>
    <script src="~/datatable/js/pdfmake.min.js"></script>
    <script src="~/datatable/js/vfs_fonts.min.js"></script>
    <script src="~/datatable/js/jszip.min.js"></script>
    @*  <script src="~/js/site.js"></script> *@
    <script src="~/js/advertisementReqDataTable.js"></script>

}

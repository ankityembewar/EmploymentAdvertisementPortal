@model IEnumerable<EAP.ViewModel.AdvertisementViewModel>

@{
    ViewData["Title"] = "AdvertisementRequest";
}

@if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
{
    <div id="errorMessage" class="alert alert-danger fade-out text-center">
        <div class="row">
            <div class="col">
                @ViewData["ErrorMessage"]
            </div>
        </div>
    </div>
    ViewData["ErrorMessage"] = string.Empty;
}

<link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />

<div id="advertisementReqListView" class="container">
    <div class="row">
        <div class="col-md">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Manage Advertisement</h4>
                    <button id="showChartBtn" class="btn btn-primary" data-toggle="modal" data-target="#chartModal" onclick="handleChartButtonClick()">Show Chart</button>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="advertisementReqTable" class="table table-striped table-bordered" cellspacing="0" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                                    <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
                                    <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                                    <th>@Html.DisplayNameFor(model => model.Location)</th>
                                    <th>Category</th>
                                    <th class="no-export">
                                        @Html.DisplayNameFor(model => model.MediaPath)
                                    </th>
                                    <th class="no-export">@Html.Display("Decision Status")</th>
                                    <th class="no-export">@Html.Display("Action")</th>
                                </tr>
                            </thead>
                            <!-- Table body -->
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="text-center">
                        <!-- No buttons or anchor tags -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="confirmationModal" tabindex="-1" role="dialog" aria-labelledby="confirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmationModalLabel">Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="closeConfirmationModalBtn">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>
            <div class="modal-body" id="confirmationModalBody">
                <!-- Confirmation message will be inserted here -->
                <div id="chartContainer"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="closeConfirmationModalBtn">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmActionBtn">Confirm</button>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/lib/highcharts/highcharts.min.js"></script>
    <script src="~/lib/highcharts/modules/exporting.min.js"></script>
    <script src="~/lib/highcharts/modules/accessibility.min.js"></script>
    <script src="~/datatable/js/buttons.html5.js"></script>
    <script src="~/datatable/js/buttons.html5.min.js"></script>
    <script src="~/datatable/js/pdfmake.min.js"></script>
    <script src="~/datatable/js/vfs_fonts.min.js"></script>
    <script src="~/datatable/js/jszip.min.js"></script>
   @*  <script src="~/js/site.js"></script> *@
    <script src="~/js/advertisementReqDataTable.js"></script>
}

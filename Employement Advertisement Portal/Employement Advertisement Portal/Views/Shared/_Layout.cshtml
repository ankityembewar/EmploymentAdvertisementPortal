@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    // Retrieve the claimed role and user ID from the HttpContext
    string claimedRole = HttpContextAccessor.HttpContext?.User?.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value;
    int? userId = HttpContextAccessor.HttpContext?.User?.FindFirst("EmpId")?.Value is string userIdStr && int.TryParse(userIdStr, out int id) ? id : (int?)null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Employee Advertisement Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="~/datatablecss/datatables.min.css" rel="stylesheet" />
    <link href="~/datatablecss/customdatatable.css" rel="stylesheet" />
</head>
<body>
    <header style="padding-bottom:3%;">
        @if (User.Identity.IsAuthenticated)
        {
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container">
                
                    <!-- Dropdown -->
                    <div class="dropdown">
                        <!-- Custom Duotone Icon -->
                        <i class="fa-solid fa-users" style="color: #b30505;"></i>
                        <!-- Dropdown toggle link -->
                        <a class="navbar-brand dropdown-toggle" href="#" role="button" id="navbarDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="color: #333; text-decoration: none;">
                            Employee Advertisement Portal
                        </a>
                        <!-- Dropdown menu -->
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown" style="border: 1px solid #ddd; border-radius: 5px;">
                            <!-- Dropdown items -->
                            @if (claimedRole == "Admin")
                            {
                                <li><a class="dropdown-item" href="/admin/index">Employee List</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("SMTPCred", "Admin", new { id = 1 })">SMTP Credential</a></li>
                                <li><a class="dropdown-item" href="/admin/AdvertisementRequest">Advertisement Request</a></li>
                            }
                            <li><a class="dropdown-item" href="@Url.Action("Details", "Admin", new{empId = userId })">Profile</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("UserAdvertisementList", "Advertisement")">Created Advertisement</a></li>
                        </ul>
                    </div>
               
                
                <!-- Toggler/collapsibe Button -->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar links -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("List", "Advertisement")">Advertistements</a>
                            </li>
                    </ul>
                </div>
                <div class="ml-auto">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <span class="nav-link"><i class="fa-solid fa-house-user"></i> Welcome, @User.Identity.Name</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/login/logout"><i class="fa-solid fa-lock-open" style="color: #916608;"></i> Logout</a>
                        </li>
                    </ul>
                </div>
                </div>
            </nav>    
        }
    </header>

    <div class="container main-content">
        <!-- Add class "main-content" here -->
        <main role="main" class="pb-3">
            @Html.Hidden("loginedRole",claimedRole)
            @Html.Hidden("userId", userId)
            <div class="w-100 mx-auto">
                <!-- This will make the content take 75% width and center it -->
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="footer fixed-bottom py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">&copy; 2024 - Employee Advertisement Portal - <a href="#">Privacy</a></span>
        </div>
    </footer>


    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/datatable/datatables.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

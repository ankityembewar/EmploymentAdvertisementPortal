@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-10">
        <section>
            <form id="forgotPassword" method="post" action="/Login/RequestPasswordReset">
                <h2>Forget Password !!</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input name="email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label for="email" class="form-label">Email</label>
                    <span class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button id="login-submit" type="submit" class="btn btn-lg btn-primary">Submit</button>
                </div>

            </form>
        </section>
    </div>
</div>

@section Scripts {
    @{
        <script>
            refreshPageWithoutReload();
        </script>

        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

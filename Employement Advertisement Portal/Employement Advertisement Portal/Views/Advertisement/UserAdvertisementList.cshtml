@model IEnumerable<EAP.ViewModel.AdvertisementViewModel>

@{
    ViewData["Title"] = "AdvertisementRequest";
}

@if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
{
    <div id="errorMessage" class="alert alert-danger fade-out text-center">
        <div class="row">
            <div class="col">
                @ViewData["ErrorMessage"]
            </div>
        </div>
    </div>
    ViewData["ErrorMessage"] = string.Empty;
}
<link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
<div id="advertisementReqListView" class="container d-flex justify-content-center align-items-center" @* style="height: 100vh;" *@>
    <div class="card">
        <div class="card-header">
            <h4>Manage Advertisement</h4>
        </div>
        <div class="card-body">
            <div class="container" style="margin-top:30px;">
                <div class="row">
                    <div class="col-md-7">
                        <div class="table-responsive">
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="advertColumnDropdown" aria-haspopup="true" aria-expanded="false">
                                    Show/Hide Columns
                                </button>
                                <button class="btn btn-light ml-4" type="button" id="createAdvert" style="margin-left: 20px;" onclick="location.href='@Url.Action("Create", "Advertisement")'">
                                    Add New
                                </button>

                                <div class="dropdown-menu" aria-labelledby="advertColumnDropdown" id="advertcolumnDropdownMenu">
                                    <!-- Dropdown items will be generated dynamically via JavaScript -->
                                </div>
                            </div>
                            <table id="advertisementReqTable" class="table table-striped table-bordered" cellspacing="0" style="width: 100%;">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.AdvId)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Title)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Price)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CreatedBy)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CreatedDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Location)
                                        </th>
                                        <th>
                                            Category
                                        </th>
                                        <th class="no-export">
                                            @Html.DisplayNameFor(model => model.MediaPath)
                                        </th>
                                        <th class="no-export">@Html.Display("Decision Status")</th>
                                        <th class="no-export">@Html.Display("Action")</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="chartType">Select Chart Type:</label>
                            <select id="advertisechartType" class="form-control">
                                <option value="pie">Pie Chart</option>
                                <option value="column">Column Chart</option>
                            </select>
                        </div>
                        <div id="chartContainer"></div>
                    </div>

                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="text-center">
                <!-- No buttons or anchor tags -->
            </div>
        </div>
    </div>
</div>

<div id="editAdvertisement" class="container d-none">
    <!-- The edit view content will be rendered here -->
</div>

@section scripts {
    <script src="~/lib/highcharts/highcharts.min.js"></script>
    <script src="~/lib/highcharts/modules/exporting.min.js"></script>
    <script src="~/lib/highcharts/modules/accessibility.min.js"></script>
    <script src="~/datatable/js/buttons.html5.js"></script>
    <script src="~/datatable/js/buttons.html5.min.js"></script>
    <script src="~/datatable/js/pdfmake.min.js"></script>
    <script src="~/datatable/js/vfs_fonts.min.js"></script>
    <script src="~/datatable/js/jszip.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/advertisementReqDataTable.js"></script>
    <script src="~/js/advertisement.js"></script>
}        
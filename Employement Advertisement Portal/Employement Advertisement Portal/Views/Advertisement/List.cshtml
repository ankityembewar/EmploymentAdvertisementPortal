@model IEnumerable<EAP.ViewModel.AdvertisementViewModel>

@{
    ViewData["Title"] = "Advertisements";
    string location = ViewBag.LocationFilter ?? "";
    string category = ViewBag.CategoryFilter ?? "";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <!-- Title -->
        <h2>@ViewData["Title"]</h2>
    </div>

    <div id="search-error" class="text-danger" style="display: none;"></div>

    <!-- Search Form -->
    <form id="search-form" asp-action="Search" asp-controller="Advertisement" method="post">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12">
                <input type="text" placeholder="Location" class="form-control" id="location" name="location" value="@location">
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12">
                <select class="form-control" id="category" name="category">
                    <option value="">Category</option>
                    <option value="Rent">Rent</option>
                    <option value="Sell">Sell</option>
                    <option value="Purchase">Purchase</option>
                </select>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 text-right">
                <button type="submit" class="btn btn-base" form="search-form">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
                </button>
                <button class="btn btn-light ml-auto" type="button" id="createAdvert" onclick="window.location.href='/Advertisement/Create'">
                    Add New
                </button>
            </div>
        </div>
    </form>
    <hr />

    <!-- Search Results -->
    <div id="search-results">
        <div id="advertisements-container">
            <partial name="_AdvertisementsPartial" model="@Model" />
        </div>
    </div>
</div>

<div id="loading-indicator" style="display:none;">Loading...</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="~/js/pagination.js"></script>
    }
}

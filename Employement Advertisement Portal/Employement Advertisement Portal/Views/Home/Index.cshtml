@{
    ViewData["Title"] = "Employee Advertisement Portal";
}

<div class="container">

    <!-- Hero Section -->
    <section class="hero-section text-center py-5">
        <h2>Discover Opportunities</h2>
        <p>Find your dream job or the perfect candidate</p>
        <div class="mt-3">
            <a href="/jobs" class="btn btn-primary mx-2">Browse Jobs</a>
            <a href="/post-job" class="btn btn-secondary mx-2">Post a Job</a>
        </div>
    </section>

    <!-- Side-by-side sections -->
    <div class="row">

        <!-- Featured Jobs -->
        <div class="col-md-6">
            <section class="featured-jobs my-5">
                <h3>Featured Jobs</h3>
                <div class="job-card p-3 mb-4 bg-light rounded">
                    <h4>Job Title</h4>
                    <p>Company Name</p>
                    <p>Location</p>
                    <a href="/job-details" class="btn btn-link">View Job</a>
                </div>
                <!-- Add more job cards here -->
            </section>
        </div>

        <!-- Job Categories -->
        <div class="col-md-6">
            <section class="job-categories my-5">
                <h3>Job Categories</h3>
                <div class="category-card p-3 mb-4 bg-light rounded">
                    <h5>Category Name</h5>
                    <a href="/category-jobs" class="btn btn-link">Explore Jobs</a>
                </div>
                <!-- Add more category cards here -->
            </section>
        </div>
    </div>

    <!-- Side-by-side sections -->
    <div class="row">

        <!-- Testimonials -->
        <div class="col-md-6">
            <section class="testimonials my-5">
                <h3>What People Say</h3>
                <blockquote class="testimonial-card p-3 mb-4 bg-light rounded">
                    "This portal helped me find my dream job!" - Job Seeker
                </blockquote>
                <!-- Add more testimonials here -->
            </section>
        </div>

        <!-- Blog/News Section -->
        <div class="col-md-6">
            <section class="blog-news my-5">
                <h3>Latest Updates</h3>
                <div class="blog-card p-3 mb-4 bg-light rounded">
                    <h4>Blog Post Title</h4>
                    <p>Short description of the blog post.</p>
                    <a href="link-to-blog-post" class="btn btn-link">Read More</a>
                </div>
                <!-- Add more blog cards here -->
            </section>
        </div>
    </div>

</div>
